    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",            
            "console": "integratedTerminal",
            "justMyCode": true
        },
        
        {
            "name": "Python: Traffic Simulator",
            "type": "python",
            "request": "launch",
            //"program": "${file}",
            "program": "simulator.py",
            "console": "integratedTerminal",
            //"stopOnEntry": false,
            "justMyCode": true
            "autoReload": {
                "enable": true
            }
        }
    ]

